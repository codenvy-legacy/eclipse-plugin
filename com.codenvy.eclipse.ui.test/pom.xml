<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>codenvy-eclipse-parent</artifactId>
		<groupId>com.codenvy.eclipse</groupId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<artifactId>com.codenvy.eclipse.ui.test</artifactId>
	<packaging>eclipse-test-plugin</packaging>
	<name>Codenvy Eclipse Plugin :: UI Test</name>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-surefire-plugin</artifactId>
				<configuration>
					<useUIHarness>true</useUIHarness>
					<useUIThread>false</useUIThread>
					<showEclipseLog>true</showEclipseLog>
					<dependencies>
						<dependency>
							<artifactId>org.eclipse.equinox.ds</artifactId>
							<type>p2-installable-unit</type>
						</dependency>
						<dependency>
							<!-- Add this to get a delete dialog with checkbox -->
							<artifactId>org.eclipse.ltk.ui.refactoring</artifactId>
							<type>p2-installable-unit</type>
						</dependency>
						<dependency>
							<artifactId>com.codenvy.eclipse.core</artifactId>
							<type>p2-installable-unit</type>
						</dependency>
						<dependency>
							<artifactId>com.codenvy.eclipse.ui</artifactId>
							<type>p2-installable-unit</type>
						</dependency>
						<dependency>
							<artifactId>com.codenvy.eclipse.lib</artifactId>
							<type>p2-installable-unit</type>
						</dependency>
					</dependencies>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>MacOS</id>
			<activation>
				<os>
					<name>mac os x</name>
					<family>mac</family>
				</os>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.eclipse.tycho</groupId>
						<artifactId>tycho-surefire-plugin</artifactId>
						<configuration>
							<argLine>-XstartOnFirstThread</argLine>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
