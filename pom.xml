<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>maven-depmgt-pom</artifactId>
		<groupId>com.codenvy</groupId>
		<version>1.12.0-SNAPSHOT</version>
	</parent>
	<groupId>com.codenvy.eclipse</groupId>
	<artifactId>codenvy-eclipse-parent</artifactId>
	<version>1.3.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Codenvy Eclipse Plugin :: Parent</name>
	<licenses>
		<license>
			<name>Eclipse Public License</name>
			<url>http://www.eclipse.org/legal/epl-v10.html</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	<developers>
		<developer>
			<name>Kevin Pollet</name>
			<organization>Serli</organization>
			<organizationUrl>http://www.serli.com</organizationUrl>
		</developer>
		<developer>
			<name>St√©phane Daviet</name>
			<organization>Serli</organization>
			<organizationUrl>http://www.serli.com</organizationUrl>
		</developer>
	</developers>
	<modules>
		<module>com.codenvy.eclipse.target</module>
		<module>com.codenvy.eclipse.core</module>
		<module>com.codenvy.eclipse.ui</module>
		<module>com.codenvy.eclipse.feature</module>
		<module>com.codenvy.eclipse.update</module>
		<module>com.codenvy.eclipse.core.test</module>
		<module>com.codenvy.eclipse.ui.test</module>
		<module>com.codenvy.eclipse.sources.feature</module>
	</modules>
	<scm>
		<connection>scm:git:git@github.com:codenvy/eclipse-plugin.git</connection>
		<developerConnection>scm:git:git@github.com:codenvy/eclipse-plugin.git</developerConnection>
		<tag>HEAD</tag>
	</scm>
	<properties>
		<build-helper-maven-plugin.version>1.9</build-helper-maven-plugin.version>
		<jackson.version>2.3.2</jackson.version>
		<license_years>2014</license_years>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<target-platform.version>4.4</target-platform.version>
		<tycho.version>0.21.0</tycho.version>
	</properties>
	<dependencies>
		<dependency>
			<groupId>com.codenvy.platform-api-client-java</groupId>
			<artifactId>uberjar</artifactId>
			<version>${codenvy.platform-api-client-java.version}</version>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-annotations</artifactId>
			<version>${jackson.version}</version>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-core</artifactId>
			<version>${jackson.version}</version>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-databind</artifactId>
			<version>${jackson.version}</version>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.jaxrs</groupId>
			<artifactId>jackson-jaxrs-json-provider</artifactId>
			<version>${jackson.version}</version>
		</dependency>
	</dependencies>
	<repositories>
		<repository>
			<id>codenvy-public-repo</id>
			<name>codenvy public</name>
			<url>https://maven.codenvycorp.com/content/groups/public/</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>codenvy-public-repo</id>
			<name>codenvy public</name>
			<url>https://maven.codenvycorp.com/content/groups/public/</url>
		</pluginRepository>
	</pluginRepositories>
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>build-helper-maven-plugin</artifactId>
					<version>${build-helper-maven-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>tycho-compiler-plugin</artifactId>
					<version>${tycho.version}</version>
				</plugin>
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>tycho-maven-plugin</artifactId>
					<version>${tycho.version}</version>
				</plugin>
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>tycho-surefire-plugin</artifactId>
					<version>${tycho.version}</version>
				</plugin>
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>target-platform-configuration</artifactId>
					<version>${tycho.version}</version>
				</plugin>
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>tycho-source-plugin</artifactId>
					<version>${tycho.version}</version>
				</plugin>
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>tycho-versions-plugin</artifactId>
					<version>${tycho.version}</version>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-source-plugin</artifactId>
				<executions>
					<execution>
						<id>plugin-source</id>
						<goals>
							<goal>plugin-source</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<configuration>
					<pomDependencies>consider</pomDependencies>
					<resolver>p2</resolver>
					<target>
						<artifact>
							<groupId>com.codenvy.eclipse</groupId>
							<artifactId>com.codenvy.eclipse.target</artifactId>
							<version>${project.version}</version>
							<type>target</type>
							<classifier>${target-platform.version}</classifier>
						</artifact>
					</target>
					<environments>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86_64</arch>
						</environment>
					</environments>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>platform-luna</id>
			<activation>
				<activeByDefault>true</activeByDefault>
				<property>
					<name>platform-name</name>
					<value>luna</value>
				</property>
			</activation>
			<properties>
				<target-platform.version>4.4</target-platform.version>
			</properties>
		</profile>
		<profile>
			<id>platform-kepler</id>
			<activation>
				<property>
					<name>platform-name</name>
					<value>kepler</value>
				</property>
			</activation>
			<properties>
				<target-platform.version>4.3</target-platform.version>
			</properties>
		</profile>
		<profile>
			<id>platform-juno</id>
			<activation>
				<property>
					<name>platform-name</name>
					<value>juno</value>
				</property>
			</activation>
			<properties>
				<target-platform.version>4.2</target-platform.version>
			</properties>
		</profile>
	</profiles>
</project>
